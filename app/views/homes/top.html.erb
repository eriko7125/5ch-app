<header>
  <nav class="navbar">
    <span class="navbar-text logo">
      <%= link_to image_tag("logo.png"), root_path %>
    </span>
    <ul class="navbar nav justify-content-end">
      <li><%= link_to "掲示板リスト", categories_path %></li>
    </ul>
  </nav>
</header>

<div class="container">
  <% @boards.each do |board|%>
    <div class="top-boards">
      <%= link_to board_path(board.id) do%>
        <p><h2><%= board.title %></h2></p>
      <% end %>
      <p class="text-right mr-5"><%= board.editor %>　<%= board.created_at.strftime("%Y/%m/%d %H:%M") %></p>
    </div>
  <% end %>
</div>